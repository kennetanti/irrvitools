#!/bin/bash

LIVE_DIR=`pwd`

cd ~/irrvitools
case "$1" in
status)
	git fetch origin
	git status
	fix
	;;
upload)
	git add bin irpkg README.md
	git commit -m "$2"
	git push
	fix
	;;
grab)
	git pull
	fix
	;;
fix)
	chmod -R +x bin irpkg
	cd $LIVE_DIR
	exit
	;;
**)
	echo "usage: rvman <command> [args]"
	echo "commands: status, upload, grab, fix"
	echo "note: rvman upload COMMIT_MESSAGE"
esac
